    function setLanguage(lang) {
      document.body.dataset.lang = lang;
      document.documentElement.lang = lang;

      document.querySelectorAll('[data-key], [data-key-placeholder]').forEach(el => {
        const key = el.dataset.key || el.dataset.keyPlaceholder;
        if (!key) return;

        const text = translations[lang][key];
        if (!text) return;

        if (el.dataset.keyPlaceholder) {
          el.placeholder = text;
        } else if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
          // не трогаем value у инпутов
        } else {
          el.textContent = text;
        }
      });

      // активная кнопка языка
      document.querySelectorAll('.lang-switch button').forEach(btn => {
        btn.classList.toggle('active', btn.dataset.lang === lang);
      });

      localStorage.setItem('lang', lang);
    }

    // переключатели
    document.querySelectorAll('.lang-switch button').forEach(btn => {
      btn.addEventListener('click', () => {
        setLanguage(btn.dataset.lang);
      });
    });

    // чтение сохранённого языка
    const savedLang = localStorage.getItem('lang') || 'ru';
    setLanguage(savedLang);


    // очень простая имитация отправки формы
    document.getElementById('lead-form').addEventListener('submit', e => {
      e.preventDefault();
      const form = e.target;
      form.reset();

      const success = document.getElementById('success-message');
      success.style.display = 'block';
      form.style.display = 'none';

      setTimeout(() => {
        form.style.display = 'block';
        success.style.display = 'none';
      }, 8000);
    });
  </script>

